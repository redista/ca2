<Window x:Class="ca2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ca2"
        mc:Ignorable="d"
        Title="MainWindow" Height="519.2" Width="774.8" Loaded="Window_Loaded">
    <Grid>
        <CheckBox x:Name="FTcheck" Content="Full Time" HorizontalAlignment="Left" Margin="78,54,0,0" VerticalAlignment="Top" Checked="Tcheck_Checked" Unchecked="Tcheck_Checked"/>
        <CheckBox x:Name="PTcheck" Content="Part Time" HorizontalAlignment="Left" Margin="191,54,0,0" VerticalAlignment="Top" Checked="Tcheck_Checked" Unchecked="Tcheck_Checked"/>
        <ListBox x:Name="LbxEmployees" HorizontalAlignment="Left" Height="258" VerticalAlignment="Top" Width="183" Margin="78,99,0,0" SelectionChanged="LbxEmployees_SelectionChanged"/>
        <TextBox x:Name="tbxFirstName" HorizontalAlignment="Left" Height="24" Margin="427,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbxSurname" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="427,170,0,0"/>
        <TextBox x:Name="tbxSalary" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="428,275,0,0"/>
        <TextBox x:Name="tbxHoursWorked" HorizontalAlignment="Left" Height="23" Margin="427,333,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbxHourlyRate" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="427,379,0,0"/>
        <TextBlock HorizontalAlignment="Left" Margin="322,104,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="321,171,0,0" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="322,276,0,0" TextWrapping="Wrap" Text="Salary" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="322,380,0,0" TextWrapping="Wrap" Text="Hourly Rate" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="321,334,0,0" TextWrapping="Wrap" Text="Hours Worked" VerticalAlignment="Top"/>
        <StackPanel Margin="427,240,221,229.6" Orientation="Horizontal">
            <RadioButton x:Name="FTradio" Content="FT" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True" Width="77"/>
            <RadioButton x:Name="PTradio" Content="PT" HorizontalAlignment="Left" VerticalAlignment="Top" IsChecked="True"/>
        </StackPanel>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="594,104,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.36,1.688" Click="btnClear_Click"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="594,171,0,0" VerticalAlignment="Top" Width="75" Click="btnAdd_Click"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="594,229,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Margin="594,283,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.349,-3.188"/>
        <TextBlock HorizontalAlignment="Left" Margin="322,441,0,0" TextWrapping="Wrap" Text="Monthly Pay :" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkMonthlyPay" HorizontalAlignment="Left" Margin="427,441,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="tbkMsg" HorizontalAlignment="Left" Margin="348,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="312"/>

    </Grid>
</Window>
